<UserControl x:Class="ControllerSirena.Slot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControllerSirena"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >
        <Border x:Name="slotBorder" BorderThickness="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Margin="0,0,0,30" CornerRadius="2">
            <Canvas x:Name="slotCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>
        
        <TextBox x:Name="durationText" HorizontalAlignment="Center" Height="20" TextWrapping="Wrap" Text="1.0" VerticalAlignment="Bottom" Width="Auto" TextAlignment="Center" Margin="0,5,0,5"/>
        <TextBox x:Name="leftText" HorizontalAlignment="Left" Height="20" Margin="5,5,0,5" TextWrapping="Wrap" Text="0.0" VerticalAlignment="Bottom" Width="Auto"/>
        <TextBox x:Name="rightText" HorizontalAlignment="Right" Height="20" Margin="0,5,5,5" TextWrapping="Wrap" Text="0.0" VerticalAlignment="Bottom" Width="Auto"/>
    </Grid>
</UserControl>
